package br.facom.ufu.poo.objetos;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Coordenada;

public class Bloco{
	private Rectangle bloco;
	private Color cor = Color.white;
	private Coordenada pos;
	public Bloco(Rectangle bloco) {
		this.bloco = bloco;
		pos = new Coordenada();
		this.bloco.x = bloco.x;
		this.bloco.y = bloco.y;
		this.pos.x = bloco.x + ((bloco.width - bloco.x) >> 1);
		this.pos.y = bloco.y + ((bloco.height - bloco.y) >> 1);
	}
	
	public void draw(Graphics g) {
		g.setColor(cor);
		g.fillRect(bloco.x, bloco.y, bloco.width, bloco.height);
		
	}
}
