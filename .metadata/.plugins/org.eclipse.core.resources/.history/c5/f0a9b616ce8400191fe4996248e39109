package br.facom.ufu.poo.objetos;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Coordenada;

public class Bloco {
	private Rectangle bloco;		// O que vai ser renderizado
	private final int playerId;	// ID do player, caso exista mais de um
	private int x, y;				// Centro do bloco
	
	public Bloco(Rectangle bloco, int x, int y, int playerId) {
		this.playerId = playerId;
		this.bloco = bloco;
		this.bloco.x = x - (bloco.x + ((bloco.width - bloco.x) >> 1));
		this.bloco.y = pos.y - (bloco.y + ((bloco.height - bloco.y) >> 1));
		System.out.println(pos);
		System.out.println(bloco);
	}
	
	public void draw(Graphics g) {
		g.fillRect(bloco.x, bloco.y, bloco.width, bloco.height);
	}
	
	public void move(int x, int y) {
		this.pos = c;
		this.bloco.x = c.x - (bloco.x + ((bloco.width - bloco.x) >> 1));
		this.bloco.y = c.y - (bloco.y + ((bloco.height - bloco.y) >> 1));
	}
	
	public int getX() {
		return pos.x;
	}
	
	public int getY() {
		return pos.y;
	}
	
	public int getPlayerId() {
		return playerId;
	}
	
}
