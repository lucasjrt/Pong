package br.facom.ufu.poo.objetos;

import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.logica.Pontuacao;
import br.facom.ufu.poo.utilidades.Constantes;

public class Jogador {
	private int idJogador;
	private String nomeJogador; // Pode ser null
	private Bloco jogador;
	private Pontuacao pontos;

	/**
	 * 
	 * @param idJogador Maximo dois jogadores
	 */
	public Jogador(int idJogador, int larguraJogador, int alturaJogador) {
		this.idJogador = idJogador;
		int xPos = idJogador * Constantes.LARGURA_TELA + (idJogador == 0 ? larguraJogador >> 1 : -larguraJogador >> 1);
		int yPos = (Constantes.ALTURA_TELA >> 1);
		this.jogador = new Bloco(new Rectangle(LARGURA_JOGADOR, ALTURA_JOGADOR), xPos, yPos, idJogador);
	}

	public void draw(Graphics g) {
		jogador.draw(g);
	}

}
