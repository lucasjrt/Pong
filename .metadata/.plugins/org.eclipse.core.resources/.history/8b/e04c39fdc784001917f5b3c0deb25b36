package br.facom.ufu.poo.objetos;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Coordenada;

public class Bloco{
	private Rectangle bloco;
	private Color cor = Color.white;
	private Coordenada pos;
	public Bloco(Rectangle bloco, Coordenada pos) {
		this.bloco = bloco;
		this.pos = pos;
		this.bloco.x = pos.x;
		this.bloco.y = pos.y;
	}
	
	public void draw(Graphics g) {
		g.setColor(cor);
		g.fillRect(bloco.x, bloco.y, bloco.width, bloco.height);
		
	}
	
	public void addListener(new Listener()) {
		
	}
}
