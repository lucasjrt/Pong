package br.facom.ufu.poo.objetos;

import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Pong;
import br.facom.ufu.poo.logica.Pontuacao;

public class Jogador {
	private int idJogador;
	private String nomeJogador; // Pode ser null
	private FBloco jogador;
	private Pontuacao pontos;

	/**
	 * 
	 * @param idJogador Maximo dois jogadores
	 */
	public Jogador(Pong jogo, int idJogador, Rectangle tamanho) {
		this.idJogador = idJogador;
		int xPos = idJogador * jogo.LARGURA_TELA + (idJogador == 0 ? tamanho.width >> 1 : -tamanho.width >> 1);
		int yPos = (jogo.ALTURA_TELA >> 1);
		this.jogador = new FBloco(new Rectangle(tamanho.width, tamanho.height), xPos, yPos, idJogador);
	}

	public void draw(Graphics g) {
		jogador.draw(g);
	}

}
