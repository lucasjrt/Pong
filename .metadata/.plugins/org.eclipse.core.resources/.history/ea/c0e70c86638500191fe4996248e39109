package br.facom.ufu.poo;

import java.awt.Color;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.Panel;
import java.awt.Rectangle;

import br.facom.ufu.poo.objetos.Bola;
import br.facom.ufu.poo.objetos.Jogador;
import br.facom.ufu.poo.utilidades.Constantes;

public class Pong extends Panel implements Runnable {
	private static final long serialVersionUID = 1L;
	public final static int WIDTH = 800;
	public final static int HEIGHT = 600;
	private final int FRAME_RATE = 30;
	
	private Thread thread;
	private Image img;
	private Graphics g;
	
	private Bola bola;
	private Jogador j;
	
	public Pong() {
		
	}
	
	public void init() {
		bola = new Bola(10, 10);
		j = new Jogador(0, new Rectangle(10, 525));
		img = createImage(WIDTH, HEIGHT);
		g = img.getGraphics();
	}
	
	public void start() {
		thread = new Thread(this, "Game");
		thread.start();
	}
	
	public void stop() {
		thread.interrupt();
	}
	
	public void paint(Graphics g) {
		g.drawImage(img, 0, 0, WIDTH, HEIGHT, this);
	}
	
	public void update(Graphics g) {
		paint(g);
	}

	@Override
	public void run() {
		int y1 = 0;
		int y2 = Constantes.ALTURA_TELA;
		
		try  {
            while (true) {
                g.setColor(Color.black);
                g.fillRect(0, 0, WIDTH, HEIGHT);
                bola.draw(g);
                j.draw(g);
                g.drawLine(0, y1, Constantes.LARGURA_TELA, y1);
                g.drawLine(0, Constantes.ALTURA_TELA >> 1, Constantes.LARGURA_TELA, Constantes.ALTURA_TELA >> 1);
                g.drawLine(0, y2, Constantes.LARGURA_TELA, y2);
                if(y1 == Constantes.ALTURA_TELA >> 1) {
                	y1 = 0;
                	System.out.println("Setting y1 = 0");
                } else {
                	System.out.println("Increasing y1:" + y1);
                	y1++;
                	System.out.println("New value: " + y1);
                }
                if(y2 == Constantes.ALTURA_TELA >> 1) {
                	y2 = Constantes.ALTURA_TELA;
                } else {
                	y2--;
                }
                System.out.println(y1 + ", " + y2);
                repaint();
                Thread.sleep((int)(1000/FRAME_RATE ));
                //bloco.move(bloco.getX() + 1, bloco.getY() + 1);
            }
        } 
        catch (InterruptedException ie) 
        { 
            System.err.print("Interrupted!\n" + ie);
        }
	}
	
	public static void main(String args[]) {
		Frame frame = new Frame("Test");
		frame.addWindowListener(new java.awt.event.WindowAdapter() {
	        public void windowClosing(java.awt.event.WindowEvent e) {
	            System.exit(0);
	            };
	         });
		Pong t = new Pong();
		t.setSize(WIDTH, HEIGHT);
		frame.setResizable(false);
		frame.add(t);
		frame.setSize(WIDTH, HEIGHT + 20);
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
		t.init();
		t.start();
	}
}
