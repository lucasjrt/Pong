package br.facom.ufu.poo.objetos;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Coordenada;

public class Bloco {
	private Rectangle bloco;
	private Color cor = Color.white;
	private final int playerId;
	private Coordenada pos;
	public Bloco(Rectangle bloco, Coordenada pos, int playerId) {
		this.playerId = playerId;
		this.pos = pos;
		System.out.println(bloco.width);
		this.bloco.x = pos.x - bloco.x + ((bloco.width - bloco.x) >> 2);
		this.bloco.y = pos.y - bloco.y + ((bloco.width - bloco.y) >> 2);
		System.out.println(pos);
		System.out.println(bloco);
	}
	
	public void draw(Graphics g) {
		g.setColor(cor);
		g.fillRect(bloco.x, bloco.y, bloco.width, bloco.height);
		
	}
	
	public void move(Coordenada c) {
		this.bloco.x = c.x;
		this.bloco.y = c.y;
	}
	
	public int getX() {
		return pos.x;
	}
	
	public int getY() {
		return pos.y;
	}
	
	public int getPlayerId() {
		return playerId;
	}
	
}
