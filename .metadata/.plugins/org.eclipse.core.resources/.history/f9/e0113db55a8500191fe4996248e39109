package br.facom.ufu.poo.objetos;

import java.awt.Graphics;
import java.awt.Rectangle;

public class Bloco {
	private Rectangle bloco;		// O que vai ser renderizado
	private final int playerId;	// ID do player, caso exista mais de um
	private int x, y;				// Centro do bloco
	
	public Bloco(Rectangle bloco, int x, int y, int idJogador) {
		this.playerId = idJogador;
		this.x = x;
		this.y = y;
		this.bloco = bloco;
		this.bloco.x = x - (bloco.x + ((bloco.width - bloco.x) >> 1));
		this.bloco.y = y - (bloco.y + ((bloco.height - bloco.y) >> 1));
	}
	
	public void draw(Graphics g) {
		g.fillRect(bloco.x, bloco.y, bloco.width, bloco.height);
	}
	
	public void move(int x, int y) {
		this.x = x;
		this.y = y;
		this.bloco.x = x - (bloco.x + ((bloco.width - bloco.x) >> 1));
		this.bloco.y = y - (bloco.y + ((bloco.height - bloco.y) >> 1));
	}
	
	public int getX() {
		return x;
	}
	
	public int getY() {
		return y;
	}
	
	public int getPlayerId() {
		return playerId;
	}
	
}
