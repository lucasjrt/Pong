package br.facom.ufu.poo.objetos;

import java.awt.Canvas;
import java.awt.Color;
import java.awt.Graphics;
import java.awt.Rectangle;

import br.facom.ufu.poo.Coordenada;
import br.facom.ufu.poo.Renderizavel;

public class Bola extends Renderizavel{
	private static final long serialVersionUID = 1L;
	private int raio;
	private boolean colisao;
	private Rectangle bordas; // O circulo e renderizado como uma elipse, portanto precisa de um retangulo
	private Color cor = Color.white;
	private int velocidade;
	private Coordenada aceleracao;
	public Bola(int raio, int velocidade, boolean colisao, Canvas canvas) {
		super(canvas);
		this.raio = raio;
		this.velocidade = velocidade;
		this.colisao = colisao;
		aceleracao = new Coordenada();
		bordas = new Rectangle();
		bordas.x = pos.x - raio;
		bordas.y = pos.y - raio;
		bordas.width = 2 * raio;
		bordas.height = 2 * raio;
	}
	
	public boolean colide(Bloco b) {
		//if()
		return true;
	}
	
	public void draw(Graphics g) {
		g.setColor(Color.white);
	}
	
	public void setColor(Color cor) {
		this.cor = cor;
	}
	
	public Color getColor() {
		return cor;
	}
	
	public void setColisao(boolean colisao) {
		this.colisao = colisao;
	}
	
	public boolean getColisao() {
		return colisao;
	}
}
